<aside class="sidebar">
    <div class="sidebar-header">
        <div class="logo">
            <img src="/img/logo.svg" alt="Logo">
            <h1>CRS</h1>
        </div>
        <button class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <nav class="sidebar-menu">
        <% if (user && user.role==='student' ) { %>
            <ul>
                <li><a href="/student/dashboard" class="<%= path === '/student/dashboard' ? 'active' : '' %>">
                        <i class="fas fa-home"></i> <span>Dashboard</span>
                    </a></li>
                <li><a href="/student/schedule" class="<%= path === '/student/schedule' ? 'active' : '' %>">
                        <i class="fas fa-calendar-alt"></i> <span>My Schedule</span>
                    </a></li>
                <li><a href="/student/courses" class="<%= path === '/student/courses' ? 'active' : '' %>">
                        <i class="fas fa-book"></i> <span>Course Catalog</span>
                    </a></li>
                <li><a href="/student/registrations" class="<%= path === '/student/registrations' ? 'active' : '' %>">
                        <i class="fas fa-clipboard-list"></i> <span>My Registrations</span>
                    </a></li>
            </ul>
            <% } else if (user && user.role==='admin' ) { %>
                <ul>
                    <li><a href="/admin/dashboard" class="<%= path === '/admin/dashboard' ? 'active' : '' %>">
                            <i class="fas fa-home"></i> <span>Dashboard</span>
                        </a></li>
                    <li><a href="/admin/courses" class="<%= path === '/admin/courses' ? 'active' : '' %>">
                            <i class="fas fa-book"></i> <span>Manage Courses</span>
                        </a></li>
                    <li><a href="/admin/students" class="<%= path === '/admin/students' ? 'active' : '' %>">
                            <i class="fas fa-user-graduate"></i> <span>Manage Students</span>
                        </a></li>
                    <li><a href="/admin/registrations" class="<%= path === '/admin/registrations' ? 'active' : '' %>">
                            <i class="fas fa-clipboard-list"></i> <span>Registrations</span>
                        </a></li>
                    <li><a href="/admin/reports" class="<%= path === '/admin/reports' ? 'active' : '' %>">
                            <i class="fas fa-chart-bar"></i> <span>Reports</span>
                        </a></li>
                </ul>
                <% } %>
    </nav>

    <div class="sidebar-footer">
        <a href="/logout" id="logoutBtn">
            <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
        </a>
    </div>
</aside>