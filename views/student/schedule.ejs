<%- include('../partials/header', { additionalCSS: ['dashboard', 'calendar' ] }) %>

    <div class="app-container">
        <%- include('../partials/sidebar', { path: '/student/schedule' , user: user }) %>

            <main class="main-content">
                <%- include('../partials/topbar', { user: user }) %>

                    <div class="container">
                        <div class="page-header">
                            <h1>My Schedule</h1>
                            <p>View your weekly class schedule</p>
                        </div>

                        <div class="schedule-container">
                            <div class="weekly-calendar" id="studentSchedule">
                                <div class="time-labels">
                                    <div class="time-label">8:00</div>
                                    <div class="time-label">9:00</div>
                                    <div class="time-label">10:00</div>
                                    <div class="time-label">11:00</div>
                                    <div class="time-label">12:00</div>
                                    <div class="time-label">13:00</div>
                                    <div class="time-label">14:00</div>
                                    <div class="time-label">15:00</div>
                                    <div class="time-label">16:00</div>
                                    <div class="time-label">17:00</div>
                                    <div class="time-label">18:00</div>
                                    <div class="time-label">19:00</div>
                                    <div class="time-label">20:00</div>
                                </div>

                                <div class="day-column">
                                    <div class="day-header">Monday</div>
                                    <div class="day-content" id="monday-content"></div>
                                </div>

                                <div class="day-column">
                                    <div class="day-header">Tuesday</div>
                                    <div class="day-content" id="tuesday-content"></div>
                                </div>

                                <div class="day-column">
                                    <div class="day-header">Wednesday</div>
                                    <div class="day-content" id="wednesday-content"></div>
                                </div>

                                <div class="day-column">
                                    <div class="day-header">Thursday</div>
                                    <div class="day-content" id="thursday-content"></div>
                                </div>

                                <div class="day-column">
                                    <div class="day-header">Friday</div>
                                    <div class="day-content" id="friday-content"></div>
                                </div>
                            </div>

                            <div class="schedule-legend" id="scheduleLegend"></div>
                        </div>
                    </div>
            </main>
    </div>

    <%- include('../partials/footer', { additionalJS: ['schedule'] }) %>